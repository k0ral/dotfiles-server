#!/bin/bash
#
# /etc/rc.local: Local multi-user startup script.
#

IRC_SCREENS=`sudo -u koral screen -ls | grep IRC | wc -l`
TTRSS_SCREENS=`screen -ls | grep TTRSS | wc -l`

[ "$IRC_SCREENS" -eq 0 ]   && su - koral -c "/usr/bin/screen -dmS IRC /usr/bin/weechat-curses"
[ "$TTRSS_SCREENS" -eq 0 ] && /usr/bin/screen -dmS TTRSS /home/koral/script/update_ttrss.sh
